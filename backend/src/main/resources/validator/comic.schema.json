{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://json-schema.org/draft-07/comic.schema.json",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "author_id": {
            "type": "number"
        },
        "type": {
            "type": "string",
            "enum": ["FREE", "PAID"]
        },
        "genres": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": ["name", "description", "author_id", "type", "genres"]
}
